<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/opponent_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU"
        android:layout_centerVertical="true"
        android:layout_above="@+id/btn_disconnect"
        android:layout_alignEnd="@+id/btn_disconnect"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/disconnect_peer_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bamboobtn"/>

    <TextView
        android:id="@+id/myMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ME"
        android:layout_above="@+id/btn_disconnect"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="28dp" />

    <Button
        android:id="@+id/btn_playAgain"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Play Again"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bamboobtn"/>
</RelativeLayout>